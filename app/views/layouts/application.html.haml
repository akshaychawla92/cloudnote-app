!!!
%html
%head
	%title Cloud Note | Sync your life
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	%link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"}/
	= csrf_meta_tags
%body
	%header
		.header_inner
			= link_to image_tag( 'logo.png'), root_path, id: "logo"
			%nav
				- if user_signed_in?
					= link_to "Notes", notes_path
					= link_to "Credit Cards", cards_path
					= link_to ".Uploads", scans_path, class: "fa fa-cloud-upload whiteclass"
					
					= link_to ".Sign Out", destroy_user_session_path, method: :delete, class:"fa fa-sign-out whiteclass"
				- else
					= link_to ".Log In", new_user_session_path, class: "fa fa-sign-in"
	%p.notice= notice
	%p.alert= alert

	= yield